{
  "name": "@elastic.io/component-commons-library",
  "version": "2.0.1-dev.3",
  "description": "Library for most common component development cases",
  "author": {
    "name": "elastic.io GmbH",
    "email": "info@elastic.io",
    "url": "http://elastic.io"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "elasticio",
    "ipaas",
    "elasticio-component"
  ],
  "scripts": {
    "lint": "eslint --ext .ts --quiet --fix",
    "pretest": "rm -fr dist && eslint --ext .ts --quiet --fix && find src spec spec-integration -name \"*.js\" -type f -delete && rm -f verifyCredentials.js",
    "test": "nyc mocha --require ts-node/register \"spec/**/*spec.ts\" --timeout 10000",
    "posttest": "tsc",
    "integration-test": "npm run pretest && nyc mocha --require ts-node/register \"spec-integration/**/*spec.ts\" --timeout 500000",
    "tsc": "rm -rf dist && tsc",
    "build": "npm run tsc",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@elastic.io/jsonata-moment": "1.1.4",
    "@elastic.io/maester-client": "3.4.1",
    "@elastic.io/ntlm-client": "1.0.0",
    "async": "3.2.0",
    "axios": "0.24.0",
    "bunyan": "1.8.14",
    "bunyan-format": "0.2.1",
    "bunyan-serializers": "0.0.2",
    "elasticio-node": "0.0.9",
    "remove-leading-slash": "1.0.1",
    "remove-trailing-slash": "0.1.1",
    "request": "2.88.2"
  },
  "devDependencies": {
    "@types/mocha": "9.0.0",
    "@types/chai": "4.3.0",
    "@types/chai-as-promised": "7.1.4",
    "@types/node": "16.9.6",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "dotenv": "10.0.0",
    "nock": "13.0.4",
    "tslint": "6.1.3",
    "tslint-config-airbnb": "5.11.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.24.2",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "sinon": "11.1.2",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "repository": "elasticio/component-commons-library",
  "license": "Apache-2.0"
}